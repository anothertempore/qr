{
  "name": "qr",
  "version": "0.0.1",
  "description": "MacOS QR code scanner app",
  "main": "build/index.js",
  "author": "Kexin Li",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anothertempore/qr/issues"
  },
  "homepage": "https://github.com/anothertempore/qr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anothertempore/qr.git"
  },
  "scripts": {
    "clean": "rimraf build",
    "dev": "pnpm build:clean && electron .",
    "build": "pnpm clean && tsc src/*.ts --outDir build && copyfiles -f src/images/iconTemplate@2x.png build/images",
    "build:clean": "pnpm clean && pnpm build",
    "pack": "pnpm build:clean && electron-builder --dir",
    "dist": "pnpm build:clean && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@zxing/library": "^0.19.1",
    "dotenv": "^16.0.0",
    "pngjs": "^6.0.0",
    "ts-custom-error": "^3.2.0"
  },
  "devDependencies": {
    "@types/pngjs": "^6.0.1",
    "copyfiles": "^2.4.1",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "electron-notarize": "^1.1.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "build": {
    "appId": "com.anothertempore.qr",
    "productName": "QR",
    "files": [
      "build/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "entitlements": "scripts/entitlements.mac.plist",
      "entitlementsInherit": "scripts/entitlements.mac.plist"
    },
    "afterSign": "scripts/notarize.js"
  }
}
